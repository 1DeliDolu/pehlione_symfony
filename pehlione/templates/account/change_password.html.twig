{% extends 'base.html.twig' %}

{% block title %}Change Password - Pehlione
{% endblock %}

{% block body %}
	<div class="bg-gray-50 min-h-screen py-12 px-4 sm:px-6 lg:px-8">
		<div class="mx-auto max-w-2xl">
			<!-- Header -->
			<div class="mb-8">
				<a href="{{ path('app_account_profile') }}" class="text-indigo-600 hover:text-indigo-700 text-sm font-medium">
					‚Üê Back to Profile
				</a>
				<h1 class="text-3xl font-bold tracking-tight text-gray-900 mt-4">Change Password</h1>
			</div>

			<!-- Error Messages -->
			{% if app.flashes('error') %}
				<div class="mb-6 rounded-lg border border-red-200 bg-red-50 p-4 text-sm text-red-800">
					<svg class="inline-block h-5 w-5 mr-2" fill="currentColor" viewbox="0 0 20 20">
						<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
					</svg>
					{% for message in app.flashes('error') %}
						{{ message }}
					{% endfor %}
				</div>
			{% endif %}

			<!-- Success Messages -->
			{% if app.flashes('success') %}
				<div class="mb-6 rounded-lg border border-green-200 bg-green-50 p-4 text-sm text-green-800">
					<svg class="inline-block h-5 w-5 mr-2" fill="currentColor" viewbox="0 0 20 20">
						<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
					</svg>
					{% for message in app.flashes('success') %}
						{{ message }}
					{% endfor %}
				</div>
			{% endif %}

			<!-- Change Password Form Card -->
			<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8">
				{% set inputClass = 'mt-2 block w-full rounded-lg border border-gray-300 px-3 py-2 shadow-sm focus:border-indigo-500 focus:ring-indigo-500' %}

				{{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

				<div>
					{{ form_label(form.currentPassword, 'Current Password', {'label_attr': {'class': 'block text-sm font-medium text-gray-900'}}) }}
					{{ form_widget(form.currentPassword, {'attr': {'class': inputClass}}) }}
					{{ form_errors(form.currentPassword) }}
				</div>

				<div>
					{{ form_label(form.newPassword.first, 'New Password', {'label_attr': {'class': 'block text-sm font-medium text-gray-900'}}) }}
					{{ form_widget(form.newPassword.first, {'attr': {'class': inputClass}}) }}
					{{ form_errors(form.newPassword.first) }}
				</div>

				<div>
					{{ form_label(form.newPassword.second, 'Confirm New Password', {'label_attr': {'class': 'block text-sm font-medium text-gray-900'}}) }}
					{{ form_widget(form.newPassword.second, {'attr': {'class': inputClass}}) }}
					{{ form_errors(form.newPassword.second) }}
				</div>

				<div class="flex items-center justify-end gap-3 pt-4">
					<a href="{{ path('app_account_profile') }}" class="rounded-lg border bg-white px-4 py-2.5 text-sm font-medium hover:bg-gray-50">
						Cancel
					</a>
					<button class="rounded-lg bg-indigo-600 px-4 py-2.5 text-sm font-medium text-white hover:bg-indigo-700" type="submit">
						Change Password
					</button>
				</div>

				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}
