<header
	class="sticky top-0 z-50 bg-white">
	<!-- Promo Banner -->
	<div class="flex h-10 items-center justify-center bg-indigo-600 px-4 text-sm font-medium text-white sm:px-6 lg:px-8">
		Get free delivery on orders over $100
	</div>

	<!-- Navigation Bar -->
	<nav aria-label="Top" class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
		<div class="border-b border-gray-200">
			<div
				class="flex h-16 items-center justify-between">
				<!-- Logo -->
				<div class="flex lg:ml-0">
					<a href="{{ path('app_home') }}" class="text-2xl font-bold text-indigo-600">
						PehliONE

					</a>
				</div>

				<!-- Desktop Menu -->
				<div class="hidden lg:flex lg:flex-1 lg:items-center lg:justify-center">
					<a href="{{ path('app_home') }}" class="flex items-center px-4 py-2 text-sm font-medium text-gray-700 hover:text-gray-900">
						Home
					</a>
					<a href="{{ path('app_product_index') }}" class="flex items-center px-4 py-2 text-sm font-medium text-gray-700 hover:text-gray-900">
						Products
					</a>
					<a href="{{ path('app_about') }}" class="flex items-center px-4 py-2 text-sm font-medium text-gray-700 hover:text-gray-900">
						About
					</a>
					<a href="{{ path('app_contact') }}" class="flex items-center px-4 py-2 text-sm font-medium text-gray-700 hover:text-gray-900">
						Contact
					</a>
				</div>
				<div
					class="ml-auto flex items-center gap-4">
					<!-- Desktop Links -->
					<div class="hidden lg:flex lg:items-center lg:space-x-6">
						{% if app.user %}
							<!-- User Dropdown -->
							<div class="relative" x-data="{ open: false }" @click.away="open = false">
								<button @click="open = !open" class="flex items-center gap-2 text-sm font-medium text-gray-700 hover:text-gray-900">
									<img src="{{ app.user and app.user.avatarPath ? asset(app.user.avatarPath) : asset('images/avatar-placeholder.png') }}" class="size-8 rounded-full bg-gray-800 outline -outline-offset-1 outline-white/10" alt="{{ app.user.name ?? 'Profile' }}"/>
									<span>Profile</span>
									<svg class="h-4 w-4 transition" :class="{'rotate-180': open}" fill="none" stroke="currentColor" viewbox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
									</svg>
								</button>

								<!-- Dropdown Menu -->
								<div x-show="open" x-transition class="absolute right-0 mt-2 w-48 rounded-lg border border-gray-200 bg-white shadow-lg z-10">
									<a href="{{ path('app_account_profile') }}" class="block px-4 py-3 text-sm text-gray-700 hover:bg-gray-50 border-b border-gray-100">
										<svg class="inline-block h-4 w-4 mr-2" fill="none" stroke="currentColor" viewbox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
										</svg>
										Personal Info
									</a>
									<a href="{{ path('app_account_address') }}" class="block px-4 py-3 text-sm text-gray-700 hover:bg-gray-50 border-b border-gray-100">
										<svg class="inline-block h-4 w-4 mr-2" fill="none" stroke="currentColor" viewbox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
										</svg>
										Address
									</a>
									<a href="{{ path('orders_list') }}" class="block px-4 py-3 text-sm text-gray-700 hover:bg-gray-50 border-b border-gray-100">
										<svg class="inline-block h-4 w-4 mr-2" fill="none" stroke="currentColor" viewbox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
										</svg>
										Orders
									</a>
									<a href="{{ path('account_mail') }}" class="block px-4 py-3 text-sm text-gray-700 hover:bg-gray-50 border-b border-gray-100">
										<svg class="inline-block h-4 w-4 mr-2" fill="none" stroke="currentColor" viewbox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
										</svg>
										Mail
									</a>
									<a href="{{ path('app_change_password') }}" class="block px-4 py-3 text-sm text-gray-700 hover:bg-gray-50 border-b border-gray-100">
										<svg class="inline-block h-4 w-4 mr-2" fill="none" stroke="currentColor" viewbox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
										</svg>
										Change Password
									</a>
									{% if is_granted('ROLE_ADMIN') %}
										<a href="{{ path('admin_dashboard') }}" class="block px-4 py-3 text-sm text-indigo-600 hover:bg-indigo-50 border-b border-gray-100 font-medium">
											<svg class="inline-block h-4 w-4 mr-2" fill="none" stroke="currentColor" viewbox="0 0 24 24">
												<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
												<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
											</svg>
											Admin Panel
										</a>
									{% endif %}
									<a href="{{ path('app_logout') }}" class="block px-4 py-3 text-sm text-red-600 hover:bg-red-50 font-medium">
										<svg class="inline-block h-4 w-4 mr-2" fill="none" stroke="currentColor" viewbox="0 0 24 24">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
										</svg>
										Logout
									</a>
								</div>
							</div>
						{% else %}
							<a href="{{ path('app_login') }}" class="text-sm font-medium text-gray-700 hover:text-gray-900">Sign in</a>
							<span aria-hidden="true" class="h-6 w-px bg-gray-200"></span>
							<a href="{{ path('app_register') }}" class="text-sm font-medium text-gray-700 hover:text-gray-900">Create account</a>
						{% endif %}
					</div>

					<!-- Search Icon -->
					<button type="button" class="p-2 text-gray-400 hover:text-gray-500">
						<span class="sr-only">Search</span>
						<svg viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="h-6 w-6">
							<path d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" stroke-linecap="round" stroke-linejoin="round"/>
						</svg>
					</button>

					<!-- Cart Icon -->
					{% include '_components/cart_drawer.html.twig' %}
				</button>
			</div>
		</div>
	</div>
</nav></header>
