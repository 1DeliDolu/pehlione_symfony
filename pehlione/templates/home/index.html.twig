{% extends 'base.html.twig' %}

{% block title %}Home - Pehlione
{% endblock %}

{% block body %}
	<div
		class="min-h-screen bg-gradient-to-b from-indigo-50 to-white">
		<!-- Hero Section -->
		<section class="mx-auto max-w-7xl px-4 py-20 sm:px-6 lg:px-8">
			<div class="text-center">
				<h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl md:text-6xl">
					Welcome to
					<span class="text-indigo-600">Pehlione</span>
				</h1>
				<p class="mx-auto mt-6 max-w-2xl text-lg text-gray-600">
					Discover our amazing collection of products and categories. Find exactly what you're looking for with our easy-to-navigate platform.
				</p>
				<div class="mt-10 flex items-center justify-center gap-4">
					<a href="{{ path('admin_category_index') }}" class="inline-flex items-center rounded-md bg-indigo-600 px-8 py-3 text-base font-semibold text-white hover:bg-indigo-700 transition">
						<svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewbox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
						</svg>
						Browse Categories
					</a>
					<a href="#featured" class="inline-flex items-center rounded-md border border-gray-300 bg-white px-8 py-3 text-base font-semibold text-gray-900 hover:bg-gray-50 transition">
						Learn More
					</a>
				</div>
			</div>
		</section>

		<!-- Stats Section -->
		<section class="bg-white py-12 sm:py-16">
			<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
				<div class="grid grid-cols-1 gap-8 sm:grid-cols-3">
					<div class="text-center">
						<div class="text-4xl font-bold text-indigo-600">{{ categories|length }}</div>
						<p class="mt-2 text-lg text-gray-600">Active Categories</p>
					</div>
					<div class="text-center">
						<div class="text-4xl font-bold text-indigo-600">100%</div>
						<p class="mt-2 text-lg text-gray-600">Customer Satisfaction</p>
					</div>
					<div class="text-center">
						<div class="text-4xl font-bold text-indigo-600">24/7</div>
						<p class="mt-2 text-lg text-gray-600">Customer Support</p>
					</div>
				</div>
			</div>
		</section>

		<!-- Featured Categories Section -->
		<section id="featured" class="mx-auto max-w-7xl px-4 py-20 sm:px-6 lg:px-8">
			<div class="mb-12">
				<h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
					Featured Categories
				</h2>
				<p class="mt-4 text-lg text-gray-600">
					Explore our popular categories to find what you need.
				</p>
			</div>

			{% if categories %}
				<div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
					{% for category in categories|slice(0, 6) %}
						<a href="{{ path('admin_category_show', {'id': category.id}) }}" class="group overflow-hidden rounded-lg border border-gray-200 bg-white shadow-sm transition hover:shadow-lg">
							<div class="bg-gradient-to-br from-indigo-100 to-purple-100 px-6 py-12">
								<div class="text-center">
									<svg class="mx-auto h-12 w-12 text-indigo-600" fill="none" stroke="currentColor" viewbox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 012 12V7a4 4 0 014-4z"></path>
									</svg>
								</div>
							</div>
							<div class="px-6 py-4">
								<h3 class="text-lg font-semibold text-gray-900 group-hover:text-indigo-600 transition">
									{{ category.name }}
								</h3>
								{% if category.description %}
									<p class="mt-2 text-sm text-gray-600 line-clamp-2">
										{{ category.description }}
									</p>
								{% endif %}
								<div class="mt-4 flex items-center text-indigo-600 group-hover:translate-x-1 transition">
									<span class="text-sm font-semibold">View Category</span>
									<svg class="ml-2 h-4 w-4" fill="none" stroke="currentColor" viewbox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
									</svg>
								</div>
							</div>
						</a>
					{% endfor %}
				</div>

				{% if categories|length > 6 %}
					<div class="mt-12 text-center">
					<a href="{{ path('admin_category_index') }}" class="inline-flex items-center rounded-md border border-indigo-600 bg-white px-6 py-3 text-base font-semibold text-indigo-600 hover:bg-indigo-50 transition">
							View All Categories ({{ categories|length }})
							<svg class="ml-2 h-5 w-5" fill="none" stroke="currentColor" viewbox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
							</svg>
						</a>
					</div>
				{% endif %}
			{% else %}
				<div class="rounded-lg border border-dashed border-gray-300 bg-gray-50 py-12 text-center">
					<svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewbox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
					</svg>
					<h3 class="mt-4 text-lg font-medium text-gray-900">No categories yet</h3>
					<p class="mt-2 text-sm text-gray-600">Start by creating your first category.</p>
				</div>
			{% endif %}
		</section>

		<!-- CTA Section -->
		<section class="bg-indigo-600 py-16 sm:py-24">
			<div class="mx-auto max-w-7xl px-4 text-center sm:px-6 lg:px-8">
				<h2 class="text-3xl font-bold text-white sm:text-4xl">
					Ready to get started?
				</h2>
				<p class="mx-auto mt-4 max-w-2xl text-lg text-indigo-100">
					Browse through our categories and find the perfect products for your needs.
				</p>
				<div class="mt-8">
				<a href="{{ path('admin_category_index') }}" class="inline-flex items-center rounded-md bg-white px-8 py-3 text-base font-semibold text-indigo-600 hover:bg-indigo-50 transition">
						Start Browsing
						<svg class="ml-2 h-5 w-5" fill="none" stroke="currentColor" viewbox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
						</svg>
					</a>
				</div>
			</div>
		</section>
	</div>
{% endblock %}
