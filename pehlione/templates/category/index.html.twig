{% extends 'admin/_layout.html.twig' %}

{% block title %}Category index{% endblock %}

{% block admin_content %}
	<div>
		<div>
			<!-- Header -->
			<div class="flex flex-col md:flex-row md:items-end md:justify-between gap-4">
				<div>
					<h1 class="text-2xl font-semibold">Categories</h1>
					<p class="mt-1 text-sm text-gray-600">Kategorileri y√∂netin.</p>
				</div>

				<a href="{{ path('admin_category_new') }}" class="inline-flex items-center justify-center rounded-xl bg-black px-4 py-2.5 text-sm font-medium text-white hover:opacity-90 focus:outline-none focus:ring-2 focus:ring-black focus:ring-offset-2">
					+ New Category
				</a>
			</div>

			<div class="mt-6 rounded-2xl border bg-white overflow-hidden">
				<div class="overflow-x-auto">
					<table class="min-w-full text-sm">
					<thead class="bg-gray-50 text-gray-600">
						<tr>
							<th class="px-5 py-3 text-left font-medium">ID</th>
							<th class="px-5 py-3 text-left font-medium">Name</th>
							<th class="px-5 py-3 text-left font-medium">Slug</th>
							<th class="px-5 py-3 text-left font-medium">Description</th>
							<th class="px-5 py-3 text-left font-medium">Created</th>
							<th class="px-5 py-3 text-right font-medium">Actions</th>
						</tr>
					</thead>
					<tbody class="divide-y">
						{% for category in categories %}
							<tr class="hover:bg-gray-50 transition">
								<td class="whitespace-nowrap px-6 py-4 text-sm font-medium text-gray-900">{{ category.id }}</td>
								<td class="px-6 py-4 text-sm text-gray-900">{{ category.name }}</td>
								<td class="px-6 py-4 text-sm text-gray-600">
									<code class="rounded bg-gray-100 px-2 py-1">{{ category.slug }}</code>
								</td>
								<td class="px-6 py-4 text-sm text-gray-600">{{ category.description ? category.description|slice(0, 50) : '-' }}</td>
								<td class="whitespace-nowrap px-6 py-4 text-sm text-gray-600">{{ category.createdAt|date('Y-m-d') }}</td>
								<td class="whitespace-nowrap px-6 py-4 text-right text-sm font-medium">
								<a href="{{ path('admin_category_show', {'id': category.id}) }}" class="text-blue-600 hover:text-blue-900 transition">View</a>
								<span class="text-gray-300 mx-2">|</span>
								<a href="{{ path('admin_category_edit', {'id': category.id}) }}" class="text-amber-600 hover:text-amber-900 transition">Edit</a>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="6" class="px-6 py-10 text-center text-gray-500">
									<svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewbox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
									</svg>
									<p class="mt-2">No categories found</p>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
{% endblock %}
