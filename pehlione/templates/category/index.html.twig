{% extends 'base.html.twig' %}

{% block title %}Category index
{% endblock %}

{% block body %}
	<div class="min-h-screen bg-gray-50">
		<div
			class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8">
			<!-- Header -->
			<div class="flex items-center justify-between">
				<h1 class="text-3xl font-bold tracking-tight text-gray-900">Categories</h1>
				<a href="{{ path('app_category_new') }}" class="inline-flex items-center rounded-md bg-blue-600 px-4 py-2 text-sm font-semibold text-white hover:bg-blue-700 transition">
					<span class="text-lg leading-6 mr-2">+</span>
					New Category
				</a>
			</div>

			<!-- Table -->
			<div class="mt-8 overflow-hidden rounded-lg border border-gray-200">
				<table class="min-w-full divide-y divide-gray-200 bg-white">
					<thead class="bg-gray-50">
						<tr>
							<th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-700">ID</th>
							<th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-700">Name</th>
							<th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-700">Slug</th>
							<th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-700">Description</th>
							<th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-700">Created</th>
							<th class="px-6 py-3 text-right text-xs font-medium uppercase tracking-wider text-gray-700">Actions</th>
						</tr>
					</thead>
					<tbody class="divide-y divide-gray-200">
						{% for category in categories %}
							<tr class="hover:bg-gray-50 transition">
								<td class="whitespace-nowrap px-6 py-4 text-sm font-medium text-gray-900">{{ category.id }}</td>
								<td class="px-6 py-4 text-sm text-gray-900">{{ category.name }}</td>
								<td class="px-6 py-4 text-sm text-gray-600">
									<code class="rounded bg-gray-100 px-2 py-1">{{ category.slug }}</code>
								</td>
								<td class="px-6 py-4 text-sm text-gray-600">{{ category.description ? category.description|slice(0, 50) : '-' }}</td>
								<td class="whitespace-nowrap px-6 py-4 text-sm text-gray-600">{{ category.createdAt|date('Y-m-d') }}</td>
								<td class="whitespace-nowrap px-6 py-4 text-right text-sm font-medium">
									<a href="{{ path('app_category_show', {'id': category.id}) }}" class="text-blue-600 hover:text-blue-900 transition">View</a>
									<span class="text-gray-300 mx-2">|</span>
									<a href="{{ path('app_category_edit', {'id': category.id}) }}" class="text-amber-600 hover:text-amber-900 transition">Edit</a>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="6" class="px-6 py-10 text-center text-gray-500">
									<svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewbox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
									</svg>
									<p class="mt-2">No categories found</p>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
{% endblock %}
