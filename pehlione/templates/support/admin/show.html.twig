{% extends 'admin/_layout.html.twig' %}

{% block title %}Support #{{ "%06d"|format(thread.id) }}{% endblock %}

{% block admin_content %}
<div class="space-y-6">
  <div class="flex flex-wrap items-start justify-between gap-4">
    <div>
      <a href="{{ path('admin_support_index') }}" class="text-sm text-indigo-600 hover:underline">← Listeye dön</a>
      <h1 class="mt-2 text-2xl font-semibold text-gray-900">{{ thread.subject }}</h1>
      <div class="mt-1 text-sm text-gray-600">
        <span class="mr-3">#{{ "%06d"|format(thread.id) }}</span>
        <span class="mr-3">Birim: {{ thread.department.name }}</span>
        <span class="mr-3">Durum: {{ thread.status }}</span>
        <span class="mr-3">Priority: {{ thread.priority }}</span>
        <span>Tip: {{ thread.type }}</span>
      </div>
    </div>

    <div class="flex flex-wrap gap-2">
      <form method="post">
        <input type="hidden" name="_action" value="assign_to_me">
        <input type="hidden" name="_token" value="{{ csrf_token('support_action_' ~ thread.id) }}">
        <button class="rounded-lg border px-3 py-2 text-sm hover:bg-gray-50">Assign to me</button>
      </form>
      {% if thread.status != 'closed' %}
        <form method="post">
          <input type="hidden" name="_action" value="close">
          <input type="hidden" name="_token" value="{{ csrf_token('support_action_' ~ thread.id) }}">
          <button class="rounded-lg bg-gray-900 text-white px-3 py-2 text-sm hover:bg-gray-800">Close</button>
        </form>
      {% else %}
        <form method="post">
          <input type="hidden" name="_action" value="reopen">
          <input type="hidden" name="_token" value="{{ csrf_token('support_action_' ~ thread.id) }}">
          <button class="rounded-lg border px-3 py-2 text-sm hover:bg-gray-50">Reopen</button>
        </form>
      {% endif %}
    </div>
  </div>

  {% for label, messages in app.flashes %}
    {% for msg in messages %}
      <div class="rounded-lg border px-4 py-3 text-sm {% if label == 'success' %}border-green-200 bg-green-50 text-green-800{% else %}border-red-200 bg-red-50 text-red-800{% endif %}">
        {{ msg }}
      </div>
    {% endfor %}
  {% endfor %}

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <section class="lg:col-span-2 space-y-4">
      <div class="rounded-xl border border-gray-200 bg-white p-5">
        <div class="flex items-center justify-between text-sm text-gray-600">
          <div>
            {% if thread.createdBy %}
              {{ thread.createdBy.name ?? thread.createdBy.email }}
            {% else %}
              {{ thread.customerName ?? thread.customerEmail ?? 'Misafir' }}
            {% endif %}
          </div>
          <div>{{ thread.createdAt|date('d.m.Y H:i') }}</div>
        </div>
        <div class="mt-3 whitespace-pre-wrap text-gray-900">{{ thread.message }}</div>
      </div>

      {% for reply in thread.replies %}
        <div class="rounded-xl border border-gray-200 bg-white p-5">
          <div class="flex items-center justify-between text-sm text-gray-600">
            <div>
              {{ reply.author ? (reply.author.name ?? reply.author.email) : 'Sistem' }}
              {% if reply.internal %}
                <span class="ml-2 inline-flex rounded-full border border-yellow-200 bg-yellow-50 px-2 py-0.5 text-xs text-yellow-800">İç Not</span>
              {% endif %}
            </div>
            <div>{{ reply.createdAt|date('d.m.Y H:i') }}</div>
          </div>
          <div class="mt-3 whitespace-pre-wrap text-gray-900">{{ reply.body }}</div>
        </div>
      {% else %}
        <div class="rounded-xl border border-gray-200 bg-gray-50 p-5 text-sm text-gray-600">
          Henüz yanıt yok.
        </div>
      {% endfor %}
    </section>

    <aside class="space-y-4">
      <div class="rounded-xl border border-gray-200 bg-white p-5">
        <h2 class="text-sm font-semibold text-gray-900 mb-3">Ticket Ayarları</h2>
        {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
          <div>
            {{ form_label(form.priority, 'Priority', {'label_attr': {'class': 'block text-xs font-medium text-gray-600'}}) }}
            {{ form_widget(form.priority, {'attr': {'class': 'mt-1 w-full rounded-md border border-gray-300 px-2 py-2 text-sm'}}) }}
          </div>
          <div>
            {{ form_label(form.assignedTo, 'Assignee', {'label_attr': {'class': 'block text-xs font-medium text-gray-600'}}) }}
            {{ form_widget(form.assignedTo, {'attr': {'class': 'mt-1 w-full rounded-md border border-gray-300 px-2 py-2 text-sm'}}) }}
          </div>
          <div>
            {{ form_label(form.tags, 'Tags', {'label_attr': {'class': 'block text-xs font-medium text-gray-600'}}) }}
            {{ form_widget(form.tags, {'attr': {'class': 'mt-1 w-full rounded-md border border-gray-300 px-2 py-2 text-sm'}}) }}
          </div>
          <button class="rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white hover:bg-indigo-500">Kaydet</button>
          {{ form_widget(form._token) }}
        {{ form_end(form, {'render_rest': false}) }}
      </div>

      <div class="rounded-xl border border-gray-200 bg-white p-5">
        <h2 class="text-sm font-semibold text-gray-900 mb-3">SLA</h2>
        <div class="text-sm text-gray-600 space-y-2">
          <div>First response due: {{ thread.firstResponseDueAt ? thread.firstResponseDueAt|date('d.m.Y H:i') : '-' }}</div>
          <div>First response at: {{ thread.firstResponseAt ? thread.firstResponseAt|date('d.m.Y H:i') : '-' }}</div>
          <div>Resolution due: {{ thread.resolutionDueAt ? thread.resolutionDueAt|date('d.m.Y H:i') : '-' }}</div>
          <div>Closed at: {{ thread.closedAt ? thread.closedAt|date('d.m.Y H:i') : '-' }}</div>
        </div>
      </div>
    </aside>
  </div>
</div>
{% endblock %}
