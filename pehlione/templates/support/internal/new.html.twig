{% extends 'base.html.twig' %}

{% block title %}Yeni İç Mesaj - Pehlione{% endblock %}

{% block body %}
<div class="mx-auto max-w-3xl px-4 py-10">
    <div class="mb-6">
        <a href="{{ path('account_mail') }}" class="text-sm text-indigo-600 hover:underline">← Mail'e dön</a>
        <h1 class="mt-2 text-2xl font-semibold text-gray-900">Yeni İç Mesaj</h1>
        <p class="text-sm text-gray-600">Departmanlar arası iç yazışma oluşturun.</p>
    </div>

    {{ form_start(form, {'attr': {'class': 'space-y-5'}}) }}
        <div>
            {{ form_label(form.department, 'Hedef Birim', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            <div class="mt-2">
                {{ form_widget(form.department, {'attr': {'class': 'w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:outline-2 focus:outline-indigo-600'}}) }}
            </div>
            {{ form_errors(form.department) }}
        </div>

        <div>
            {{ form_label(form.subject, 'Konu', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            <div class="mt-2">
                {{ form_widget(form.subject, {'attr': {'class': 'w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:outline-2 focus:outline-indigo-600'}}) }}
            </div>
            {{ form_errors(form.subject) }}
        </div>

        <div>
            {{ form_label(form.message, 'Mesaj', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            <div class="mt-2">
                {{ form_widget(form.message, {'attr': {'class': 'w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:outline-2 focus:outline-indigo-600'}}) }}
            </div>
            {{ form_errors(form.message) }}
        </div>

        <button type="submit" class="rounded-md bg-indigo-600 px-4 py-2 text-sm font-semibold text-white hover:bg-indigo-500">
            Gönder
        </button>
        {{ form_widget(form._token) }}
    {{ form_end(form, {'render_rest': false}) }}
</div>
{% endblock %}
