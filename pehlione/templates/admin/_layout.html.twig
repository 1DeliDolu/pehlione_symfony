{% extends 'base.html.twig' %}

{% block body %}
	<div
		class="flex min-h-screen bg-gray-50">
		<!-- Sidebar -->
		<aside class="hidden w-64 border-r border-gray-200 bg-white lg:block">
			<nav class="space-y-1 px-4 py-6">
				<a href="{{ path('admin_product_index') }}" class="block rounded-lg px-4 py-2.5 text-sm font-medium {% if 'admin_product' in app.request.attributes.get('_route') %}bg-black text-white{% else %}text-gray-700 hover:bg-gray-50{% endif %}">
					Ürünler
				</a>
				<a href="{{ path('app_category_index') }}" class="block rounded-lg px-4 py-2.5 text-sm font-medium text-gray-700 hover:bg-gray-50">
					Kategoriler
				</a>
				<a href="{{ path('admin_address_index') }}" class="block rounded-lg px-4 py-2.5 text-sm font-medium {% if 'admin_address' in app.request.attributes.get('_route') %}bg-black text-white{% else %}text-gray-700 hover:bg-gray-50{% endif %}">
					Adresler
				</a>
			</nav>

			<div class="border-t border-gray-200 px-4 py-6">
				<a href="{{ path('app_home') }}" class="block rounded-lg px-4 py-2.5 text-sm font-medium text-gray-700 hover:bg-gray-50">
					← Ana Sayfa
				</a>
			</div>
		</aside>

		<!-- Main Content -->
		<main
			class="flex-1">
			<!-- Mobile Header -->
			<div class="border-b border-gray-200 bg-white px-4 py-4 lg:hidden">
				<div class="flex items-center justify-between">
					<h1 class="text-lg font-semibold text-gray-900">Admin</h1>
					<button class="rounded-lg p-2 text-gray-700 hover:bg-gray-100">
						<svg class="h-6 w-6" fill="none" stroke="currentColor" viewbox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
						</svg>
					</button>
				</div>
			</div>

			<!-- Content Area -->
			<div class="px-4 py-8 sm:px-6 lg:px-8">
				{% block admin_content %}{% endblock %}
			</div>
		</main>
	</div>
{% endblock %}
