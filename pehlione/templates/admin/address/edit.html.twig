{% extends 'admin/_layout.html.twig' %}

{% block title %}Edit Address - Admin{% endblock %}

{% block admin_content %}
	<div>
		<div>
			<div class="flex flex-col md:flex-row md:items-end md:justify-between gap-4 mb-6">
				<div>
					<h1 class="text-2xl font-semibold">Edit Address</h1>
					<p class="mt-1 text-sm text-gray-600">{{ address.user.firstname ?? 'N/A' }} {{ address.user.lastname ?? 'N/A' }}</p>
				</div>
			</div>

			<div class="rounded-2xl border bg-white overflow-hidden p-6">

				<!-- User Profile Section -->
				{% if address.user %}
					<div class="mb-8 rounded-lg border border-gray-200 bg-gray-50 p-6">
						<h2 class="text-lg font-semibold text-gray-900 mb-4">User Profile</h2>
						<div class="flex items-center gap-6">
							<div>
								<img src="{{ address.user.avatarPath ? asset(address.user.avatarPath) : asset('images/avatar-placeholder.png') }}" class="h-24 w-24 rounded-full bg-gray-200 object-cover" alt="{{ address.user.firstname }} {{ address.user.lastname }}">
							</div>
							<div class="space-y-2">
								<div>
									<dt class="text-sm font-medium text-gray-500">Name</dt>
									<dd class="text-sm text-gray-900">{{ address.user.firstname ?? 'N/A' }} {{ address.user.lastname ?? 'N/A' }}</dd>
								</div>
								<div>
									<dt class="text-sm font-medium text-gray-500">Email</dt>
									<dd class="text-sm text-gray-900">{{ address.user.email }}</dd>
								</div>
							</div>
						</div>
					</div>
				{% endif %}

				{{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
			<div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
				<div>
					{{ form_label(form.phone) }}
					{{ form_widget(form.phone, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500'}}) }}
					{{ form_errors(form.phone) }}
				</div>

				<div>
					{{ form_label(form.countryCode) }}
					{{ form_widget(form.countryCode, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500'}}) }}
					{{ form_errors(form.countryCode) }}
				</div>

				<div class="sm:col-span-2">
					{{ form_label(form.strasse) }}
					{{ form_widget(form.strasse, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500'}}) }}
					{{ form_errors(form.strasse) }}
				</div>

				<div>
					{{ form_label(form.hausnummer) }}
					{{ form_widget(form.hausnummer, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500'}}) }}
					{{ form_errors(form.hausnummer) }}
				</div>

				<div>
					{{ form_label(form.postalCode) }}
					{{ form_widget(form.postalCode, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500'}}) }}
					{{ form_errors(form.postalCode) }}
				</div>

				<div>
					{{ form_label(form.city) }}
					{{ form_widget(form.city, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500'}}) }}
					{{ form_errors(form.city) }}
				</div>

				<div>
					{{ form_label(form.region) }}
					{{ form_widget(form.region, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500'}}) }}
					{{ form_errors(form.region) }}
				</div>
			</div>

			<div class="flex gap-4">
				<button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700">
					Update Address
				</button>
				<a href="{{ path('admin_address_index') }}" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
					Cancel
				</a>
			</div>
				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}
