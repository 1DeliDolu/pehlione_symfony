<form method="post" action="{{ path('admin_product_delete', {'id': product.id}) }}" onsubmit="return confirm('Bu ürünü silmek istediğinize emin misiniz?');">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
	<button class="rounded-xl bg-red-600 px-4 py-2.5 text-sm font-medium text-white hover:opacity-90 focus:outline-none focus:ring-2 focus:ring-red-600 focus:ring-offset-2" type="submit">
		Sil
	</button>
</form>
