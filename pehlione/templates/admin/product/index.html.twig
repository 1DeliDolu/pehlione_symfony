{% extends 'admin/_layout.html.twig' %}

{% block title %}Ürünler
{% endblock %}

{% block admin_content %}
	<div class="flex flex-col md:flex-row md:items-end md:justify-between gap-4">
		<div>
			<h1 class="text-2xl font-semibold">Ürünler</h1>
			<p class="mt-1 text-sm text-gray-600">Ürün kataloğunu yönetin.</p>
		</div>

		<a href="{{ path('admin_product_new') }}" class="inline-flex items-center justify-center rounded-xl bg-black px-4 py-2.5 text-sm font-medium text-white hover:opacity-90 focus:outline-none focus:ring-2 focus:ring-black focus:ring-offset-2">
			+ Yeni Ürün
		</a>
	</div>

	<div class="mt-6 rounded-2xl border bg-white overflow-hidden">
		<div class="overflow-x-auto">
			<table class="min-w-full text-sm">
				<thead class="bg-gray-50 text-gray-600">
					<tr>
						<th class="px-5 py-3 text-left font-medium">ID</th>
						<th class="px-5 py-3 text-left font-medium">Ad</th>
						<th class="px-5 py-3 text-left font-medium">Kategori</th>
						<th class="px-5 py-3 text-left font-medium">Fiyat</th>
						<th class="px-5 py-3 text-left font-medium">Stok</th>
						<th class="px-5 py-3 text-left font-medium">Aktif</th>
						<th class="px-5 py-3 text-right font-medium">Aksiyon</th>
					</tr>
				</thead>

				<tbody class="divide-y">
					{% for product in products %}
						<tr class="hover:bg-gray-50">
							<td class="px-5 py-4 text-gray-500">{{ product.id }}</td>
							<td class="px-5 py-4 font-medium text-gray-900">{{ product.name }}</td>
							<td class="px-5 py-4 text-gray-700">{{ product.category.name }}</td>
							<td class="px-5 py-4 text-gray-700">
								{{ (product.priceAmount / 100)|number_format(2, ',', '.') }}
								{{ product.currency }}
							</td>
							<td class="px-5 py-4 text-gray-700">{{ product.stockQuantity }}</td>
							<td class="px-5 py-4">
								{% if product.isActive %}
									<span class="inline-flex items-center rounded-lg bg-green-50 px-2 py-1 text-xs font-medium text-green-700 border border-green-200">Aktif</span>
								{% else %}
									<span class="inline-flex items-center rounded-lg bg-gray-50 px-2 py-1 text-xs font-medium text-gray-700 border border-gray-200">Pasif</span>
								{% endif %}
							</td>
							<td class="px-5 py-4">
								<div class="flex items-center justify-end gap-2">
									<a href="{{ path('admin_product_show', {'id': product.id}) }}" class="rounded-lg border px-3 py-2 text-xs font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-black focus:ring-offset-2">
										Görüntüle
									</a>
									<a href="{{ path('admin_product_edit', {'id': product.id}) }}" class="rounded-lg bg-gray-900 px-3 py-2 text-xs font-medium text-white hover:opacity-90 focus:outline-none focus:ring-2 focus:ring-black focus:ring-offset-2">
										Düzenle
									</a>
								</div>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="7" class="px-5 py-10 text-center text-gray-600">
								Henüz ürün yok.
								<a class="underline" href="{{ path('admin_product_new') }}">Yeni ürün ekleyin</a>.
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}
