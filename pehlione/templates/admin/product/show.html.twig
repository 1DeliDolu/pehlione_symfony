{% extends 'admin/_layout.html.twig' %}
{% block title %}Ürün
{% endblock %}

{% block admin_content %}
	<div class="flex items-center justify-between gap-4">
		<div>
			<h1 class="text-2xl font-semibold">Ürün</h1>
			<p class="mt-1 text-sm text-gray-600">Detayları görüntüleyin.</p>
		</div>

		<div class="flex items-center gap-2">
			<a href="{{ path('admin_product_edit', {'id': product.id}) }}" class="rounded-xl bg-black px-4 py-2.5 text-sm font-medium text-white hover:opacity-90 focus:outline-none focus:ring-2 focus:ring-black focus:ring-offset-2">
				Düzenle
			</a>
			<a href="{{ path('admin_product_index') }}" class="rounded-xl border bg-white px-4 py-2.5 text-sm font-medium hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-black focus:ring-offset-2">
				Liste
			</a>
		</div>
	</div>

	<div class="mt-6 rounded-2xl border bg-white p-6">
		<dl class="grid grid-cols-1 md:grid-cols-12 gap-4">
			<div class="md:col-span-3 text-sm text-gray-600">ID</div>
			<div class="md:col-span-9 text-sm font-medium text-gray-900">{{ product.id }}</div>

			<div class="md:col-span-3 text-sm text-gray-600">Ad</div>
			<div class="md:col-span-9 text-sm font-medium text-gray-900">{{ product.name }}</div>

			<div class="md:col-span-3 text-sm text-gray-600">Slug</div>
			<div class="md:col-span-9">
				<span class="inline-flex items-center rounded-lg border bg-gray-50 px-2 py-1 text-xs text-gray-700">{{ product.slug }}</span>
			</div>

			<div class="md:col-span-3 text-sm text-gray-600">Kategori</div>
			<div class="md:col-span-9 text-sm font-medium text-gray-900">{{ product.category.name }}</div>

			<div class="md:col-span-3 text-sm text-gray-600">Fiyat</div>
			<div class="md:col-span-9 text-sm font-medium text-gray-900">
				{{ (product.priceAmount / 100)|number_format(2, ',', '.') }}
				{{ product.currency }}
			</div>

			<div class="md:col-span-3 text-sm text-gray-600">Stok</div>
			<div class="md:col-span-9 text-sm font-medium text-gray-900">{{ product.stockQuantity }}</div>

			<div class="md:col-span-3 text-sm text-gray-600">Aktif</div>
			<div class="md:col-span-9 text-sm font-medium text-gray-900">{{ product.isActive ? 'Evet' : 'Hayır' }}</div>

			<div class="md:col-span-3 text-sm text-gray-600">Açıklama</div>
			<div class="md:col-span-9 text-sm text-gray-900">{{ product.description ?: '—' }}</div>
		</dl>
	</div>

	<div class="mt-6 rounded-2xl border bg-white p-6">
		<div class="flex items-center justify-between">
			<div>
				<div class="text-sm font-medium text-gray-900">Sil</div>
				<div class="mt-1 text-sm text-gray-600">Bu işlem geri alınamaz.</div>
			</div>
			{{ include('admin/product/_delete_form.html.twig') }}
		</div>
	</div>
{% endblock %}
