{% extends 'base.html.twig' %}

{% block title %}Mail #{{ message.id }}{% endblock %}

{% block body %}
<div class="mx-auto max-w-4xl px-4 py-10">
  <div class="flex items-start justify-between gap-4 mb-6">
    <div>
      <h1 class="text-2xl font-semibold">#{{ message.id }} — {{ message.subject }}</h1>
      <p class="mt-2 text-sm text-gray-600">
        <span class="font-medium">{{ message.fromName ?: '-' }}</span>
        <span class="text-gray-500">({{ message.fromEmail }})</span>
        · <span class="text-gray-500">{{ message.createdAt|date('d.m.Y H:i') }}</span>
      </p>
    </div>

    <form method="post" action="{{ path('admin_mail_archive', {id: message.id}) }}">
      <input type="hidden" name="_token" value="{{ csrf_token('archive_mail_' ~ message.id) }}">
      <button type="submit" class="rounded-md border border-gray-300 px-4 py-2 text-sm hover:bg-gray-50">Arşivle</button>
    </form>
  </div>

  <div class="rounded-xl border border-gray-200 bg-white p-6 mb-6">
    <div class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-2">Mesaj</div>
    <div class="whitespace-pre-wrap text-gray-900 leading-relaxed">{{ message.body }}</div>
  </div>

  <div class="flex gap-2">
    <a class="text-indigo-600 hover:underline text-sm" href="{{ path('admin_mail_inbox') }}">← Geri (Inbox)</a>
  </div>
</div>
{% endblock %}
