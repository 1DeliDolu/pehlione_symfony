{% extends 'base.html.twig' %}
{% block title %}Sipariş
{% endblock %}

{% block body %}
	<div class="mx-auto max-w-4xl px-4 py-10">
		<h1 class="text-2xl font-semibold">Sipariş
			{{ order.orderNumber }}</h1>
		<div class="mt-2 text-sm text-gray-600">Durum:
			<span class="font-medium">{{ order.status }}</span>
		</div>

		<div class="mt-6 rounded-2xl border bg-white overflow-hidden">
			<div class="divide-y">
				{% for item in order.items %}
					<div class="p-5 flex justify-between">
						<div>
							<div class="font-medium">{{ item.productName }}</div>
							<div class="text-sm text-gray-600">Qty
								{{ item.quantity }}</div>
						</div>
						<div class="font-semibold">
							{{ (item.lineTotalAmount / 100)|number_format(2, ',', '.') }}
							{{ order.currency }}
						</div>
					</div>
				{% endfor %}
			</div>
		</div>

		<div class="mt-6 text-right text-lg font-semibold">
			Toplam:
			{{ (order.totalAmount / 100)|number_format(2, ',', '.') }}
			{{ order.currency }}
		</div>

		<div class="mt-8 rounded-2xl border bg-white p-6">
			<h2 class="text-sm font-medium text-gray-900">Teslimat Adresi</h2>
			<div class="mt-3 text-sm text-gray-700 space-y-1">
				<div class="font-medium text-gray-900">{{ order.shippingFirstName }}
					{{ order.shippingLastName }}</div>
				<div>{{ order.shippingLine1 }}</div>
				{% if order.shippingLine2 %}
					<div>{{ order.shippingLine2 }}</div>
				{% endif %}
				<div>{{ order.shippingPostalCode }}
					{{ order.shippingCity }}</div>
				{% if order.shippingRegion %}
					<div>{{ order.shippingRegion }}</div>
				{% endif %}
				<div>{{ order.shippingCountryCode }}</div>
				{% if order.shippingPhone %}
					<div class="text-gray-600">{{ order.shippingPhone }}</div>
				{% endif %}
			</div>
		</div>

		<div class="mt-6">
			<a href="{{ path('cart_show') }}" class="rounded-xl border bg-white px-4 py-2.5 text-sm font-medium hover:bg-gray-50">
				Alışverişe devam et
			</a>
		</div>
	</div>
{% endblock %}
