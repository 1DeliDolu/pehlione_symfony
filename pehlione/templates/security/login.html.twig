{% extends 'base.html.twig' %}

{% block title %}Giriş - Pehlione
{% endblock %}

{% block body %}
	<div class="min-h-screen bg-gray-50 flex items-center justify-center px-4 py-12">
		<div class="w-full max-w-md">
			<div class="rounded-2xl border bg-white p-6 shadow-sm">
				<div class="mb-6">
					<div class="text-sm text-gray-500">PehliONE</div>
					<h1 class="text-2xl font-semibold text-gray-900">Giriş yap</h1>
				</div>

				{% if error %}
					<div class="mb-4 rounded-xl border border-red-200 bg-red-50 px-4 py-3 text-sm text-red-800">
						{{ error.messageKey|trans(error.messageData, 'security') }}
					</div>
				{% endif %}

				{% if app.user %}
					<div class="mb-4 rounded-xl border bg-gray-50 px-4 py-3 text-sm text-gray-800">
						Zaten giriş yaptınız:
						<strong>{{ app.user.userIdentifier }}</strong>.
						<a class="underline" href="{{ path('app_logout') }}">Çıkış</a>
					</div>
				{% endif %}

				<form method="post" class="space-y-5">
					<div>
						<label class="block text-sm font-medium text-gray-900" for="username">Email</label>
						<input type="email" value="{{ last_username }}" name="_username" id="username" autocomplete="email" required autofocus class="mt-2 block w-full rounded-xl border border-gray-300 px-3 py-2 shadow-sm focus:border-indigo-500 focus:ring-indigo-500"/>
					</div>

					<div>
						<label class="block text-sm font-medium text-gray-900" for="password">Şifre</label>
						<input type="password" name="_password" id="password" autocomplete="current-password" required class="mt-2 block w-full rounded-xl border border-gray-300 px-3 py-2 shadow-sm focus:border-indigo-500 focus:ring-indigo-500"/>
					</div>

					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

					<button class="w-full rounded-xl bg-indigo-600 px-4 py-3 text-sm font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" type="submit">
						Giriş yap
					</button>
				</form>
			</div>

			<p class="mt-4 text-center text-xs text-gray-500">
				Admin test:
				<span class="font-mono text-gray-600">admin@pehlione.local</span>
				/
				<span class="font-mono text-gray-600">ChangeMe123!</span>
			</p>
		</div>
	</div>
{% endblock %}
